{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ES2020",
        "module": "commonjs",
        "allowJs": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": ["node_modules/@types"],
        "outDir": "dist"
    },
    "exclude": [],
    "include": ["src/**/*"]
}
